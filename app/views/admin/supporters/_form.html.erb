<% url = params[:action] == "new" ? admin_event_supporters_path : admin_event_supporter_path %>

<div class="w300">
	<%= simple_form_for [:admin, @supporter], url: url do |f| %>
		<% @errors = @supporter.errors.messages %>

		<%= f.input :photo, label: "스폰서 로고", label_html: { class: "fwb" }, input_html: { class: "form-control" }, error: false %>
		<% flash_error_message(:photo) %>
		<br>
		<%= f.input :name, label: "이름", label_html: { class: "fwb" }, input_html: { class: "form-control" }, error: false %>
		<% flash_error_message(:name) %>
		<br>
		<%= f.input :link, label: "링크", label_html: { class: "fwb" }, input_html: { class: "form-control" }, error: false %>
		<% flash_error_message(:link) %>
		<br>		
		<%= f.input :position, label: "순서", label_html: { class: "fwb" }, input_html: { class: "form-control" }, error: false %>
		<% flash_error_message(:position) %>
		<br>
		<% if params[:action] == "edit" %>
			<%= link_to '스폰서 삭제', admin_event_supporter_path(@supporter.event, @supporter), method: :delete, data: { confirm: "잘못 누른게 아니라면 삭제합니다."}, class: "btn btn-danger w100p tac" %>
		<% end %>
		<hr>
		<%= render "/shared/form_confirm_or_cancel" %>
	<% end %>
</div>